@model IEnumerable<WebApplication1.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>All Films</h1>

<p>
    <a asp-action="Create" style="text-decoration:none">Create Film <i class="fa-solid fa-plus"></i></a>
</p>


<form asp-controller="Film" asp-action="Index" method="get" class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
    <div class="input-group">
        <input class="form-control" name="search" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
        <button class="btn btn-primary" id="btnNavbarSearch" type="submit"><i class="fas fa-search"></i></button>
    </div>
</form>

<div class="listFilms" style=" display: flex; flex-wrap: wrap;justify-content: space-between;padding: 1rem 1rem;">

@foreach (var item in Model) {
        <div class='productCard' style="margin-top: 0.5rem">
        <input type="hidden" id="FilmName" asp-for="@item.FilmName" />
            <div class="card" style="width: 18rem; height: 28rem;">
                <img src="~/uploads/@item.Image" style="width: 100%; height: 18rem;" class="card-img-top" alt="loading">
        <div class="card-body">
                <h5 class="card-title">  @Html.DisplayFor(modelItem => item.FilmName)</h5>

                <p class="card-text">@Html.DisplayFor(modelItem => item.FilmDescription)</p>
                <a asp-action="Details" asp-route-id="@item.FilmId"><i class="fa-solid fa-circle-info fa-xl" color="black"></i></a> |
                <a  asp-action="Edit" asp-route-id="@item.FilmId"><i class="fa-solid fa-pen-to-square fa-xl"></i></a> |
               
                <a asp-action="Delete" asp-route-id="@item.FilmId"><i class="fa-solid fa-trash fa-xl" color="red"></i></a>
        </div>
    </div>
</div>

}

</div>
